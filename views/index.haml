!!! html5

%html{:lang => "en"}
  %head
    %title Vancouver Tech on a Map
    %script{:src => "/js/jquery-1.4.4.min.js", :type => "text/javascript"}
    %script{:src => "http://maps.google.com/maps/api/js?sensor=false", :type => "text/javascript"}
    %script{:src => "/js/markerclusterer_packed.js", :type => "text/javascript"}
    %script{:src => "/js/magic.js", :type => "text/javascript"}
    
    %link{:href => "/s/style.css", :media => "screen", :rel => "stylesheet", :type => "text/css"}
    %link{:href => 'http://fonts.googleapis.com/css?family=Droid+Serif', :rel => 'stylesheet', :type => 'text/css'}
    %meta{:name => "viewport", :content => "initial-scale=1.0, user-scalable=no"}
  %body
    - unless @iframe
      %a{:href => "http://github.com/kalv/vantechmap", :target => "_blank"}
        %img{:style => "position: absolute; top: 0; right: 0; border: 0;z-index:2;", :src => "https://assets2.github.com/img/7afbc8b248c68eb468279e8c17986ad46549fb71?repo=&url=http%3A%2F%2Fs3.amazonaws.com%2Fgithub%2Fribbons%2Fforkme_right_darkblue_121621.png&path=", :alt => "Fork me on Github"}

    #form_container
      %a#cancel{:href=> "/" } Cancel
      %iframe#form{:src => "https://spreadsheets0.google.com/embeddedform?formkey=dHY0Q1VEeE4xTkRqY2RKYTItX19HNXc6MQ"}
        Loading...

    #content
      %h1.panel Vancouver Tech on a Map
      - unless @iframe
        %p#description.panel
          A view of tech startups in vancouver
          %br
          %a#form_link.panel{:href => "https://spreadsheets.google.com/viewform?formkey=dHY0Q1VEeE4xTkRqY2RKYTItX19HNXc6MQ"}
            Add your tech company now!
          %br
          %a#embed_me_link{:href=>"#"}
            Embed me
    #embed_me
      %p
        You can embed this map on your blog or website. Just place this html into your site:
        %br
        %textarea{:rows => 2, :cols => 100}
          <iframe src="http://vantechmap.heroku.com/?widget=true" width="300" height="200" frameborder="0"></iframe>
      %input#close_embed_me{:type=>"button", :value => "close"}

    %p#made_by.panel
      %a{:href=>"http://twitter.com/#!/kalv", :target=>"_blank"} @kalv
      built this at
      %a{:href=>"http://twitter.com/#!/bootup", :target=>"_blank"} @bootup 
      and
      %a{:href=>"http://twitter.com/#!/nvbc", :target=>"_blank"} @nvbc
    #spreadsheet_data
      %script#spreadsheet_src{:type => "text/javascript"}

    #map_canvas